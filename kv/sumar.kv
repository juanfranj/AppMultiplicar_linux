
<Sumar>
    BoxLayout:
        #padding: 5
        spacing: 5
        orientation: "vertical"

        canvas:
            Color:
                rgba: .55, .27, .07, 1
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            size_hint: (1,.1)
            orientation: "horizontal"

            canvas:
                Color:
                    rgba: .0, .39, .0, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    #radius:[(20.0, 20.0), (20.0, 20.0), (20.0, 20.0), (20.0, 20.0)]
            
            FloatLayout:

                MDLabel:
                    pos_hint: {"center_x":.15, "center_y":.5}
                    size_hint: (.4, .5)
                    font_style: "H6"
                    halign: "center"
                    text: "Sumandos:"

                MDTextFieldRect:
                    id: sumandos
                    pos_hint:{"center_x":.35, "center_y": 0.5}
                    size_hint:(.12, .32)
                    hint_text: "[2-5]"
                    input_type: "number"
                    font_style:"H6"
                    halign: "center"
                
                MDLabel:
                    pos_hint: {"center_x":.52, "center_y":.5}
                    size_hint: (.3, .5)
                    font_style: "H6"
                    halign: "center"
                    text: "DÃ­gitos:"

                MDTextFieldRect:
                    id: digitos
                    pos_hint:{"center_x":.68, "center_y": 0.5}
                    hint_text: "[1-4]"
                    size_hint:(.12, .32)
                    input_type: "number"
                    font_style:"H6"
                    halign: "center"
                
                MDFillRoundFlatButton:

                    pos_hint: {"x":0.76, "center_y":.5}
                    #size_hint: 0.3, None
                    id: calcular
                    text: "Calcular"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    md_bg_color: 0.3, 0.3, .3, 1
                    font_style: "Subtitle1"
                    on_release: root.mostrar_suma()
        
        BoxLayout:
            size_hint: (1,.8)
            orientation: "vertical"
            
            canvas:
                Color:
                    rgba: .0, .39, .0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
                    #radius:[(20.0, 20.0), (20.0, 20.0), (20.0, 20.0), (20.0, 20.0)]
            BoxLayout:
                size_hint: (1,.05)
                MDLabel:
                    id: informacion
                    pos_hint: {"center_x":.52, "center_y":.5}
                    size_hint: (.3, .5)
                    font_style: "H6"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    halign: "center"
                    text: ""
                        
            BoxLayout:
                size_hint: (1,.95)
                orientation: "vertical"
                FloatLayout:
                    id: pizarra
                    GridLayout:
                        id:grid
                        size_hint: (1, .9)
                        pos_hint: {"x":.0, "y":.1}
                        
                    
                    MDFillRoundFlatButton:
                        id: boton_calcular
                        size_hint: (.4, .1)
                        pos_hint: {"center_x":0.25, "center_y":.06}
                        text: "Resultado"
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                        md_bg_color: 0.3, 0.3, .3, 1
                        font_style: "H6"
                        on_release: root.mostrar_resultado()
                    
                    MDFillRoundFlatButton:
                        id: boton_comprobar
                        size_hint: (.4, .1)
                        pos_hint: {"center_x":0.75, "center_y":.06}
                        text: "Comprobar"
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                        md_bg_color: 0.3, 0.3, .3, 1
                        font_style: "H6"
                        on_release: root.mostrar_comprobar_resultado()
                    
        
