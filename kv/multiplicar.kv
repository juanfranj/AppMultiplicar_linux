<Multiplicar>
    BoxLayout:
        padding: 5
        spacing: 5
        orientation: "vertical"

        BoxLayout:
            size_hint: (1,.2)
            orientation: "horizontal"

            canvas:
                Color:
                    rgba: .46, .79, .73, 0.1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius:[(20.0, 20.0), (20.0, 20.0), (20.0, 20.0), (20.0, 20.0)]

            BoxLayout:
                orientation: "vertical"

                BoxLayout:

                    FloatLayout:

                        MDFillRoundFlatButton:

                            pos_hint: {"x":0.2, "center_y":.5}
                            #size_hint: 0.3, None
                            id: comenzar
                            text: "Comenzar"
                            theme_text_color: "Custom"
                            text_color: 1, 1, 1, 1
                            #md_bg_color: 0.17, 0.62, .35, 1
                            md_bg_color: app.theme_cls.primary_color
                            on_release: root.boton_comenzar()
                            

                        MDFillRoundFlatButton:

                            id: errores
                            pos_hint: {"x":.6, "center_y":.5}
                            #size_hint: 1.0, None
                            text: "Errores"
                            theme_text_color: "Custom"
                            text_color: 1, 1, 1, 1
                            #md_bg_color: 0.17, 0.62, .35, 1
                            md_bg_color: app.theme_cls.primary_color
                            on_release: root.boton_error()

                BoxLayout:

                    FloatLayout:

                        MDLabel:

                            pos_hint: {"x": .05, "center_y": .5}
                            size_hint: (.65, 1)
                            font_style: "Subtitle1"
                            halign: "center"
                            text: "Num. multiplicaciones:"
                            font_name : "Urban Class"
                            font_size: "15sp"

                        MDTextFieldRect:
                        
                            id: total
                            pos_hint:{"x":.65, "center_y": 0.5}
                            size_hint:(.20, .35)
                            input_type: "number" 
                            halign:"center"
                            font_style:"H6"
            

        BoxLayout:

            #id: enunciados
            size_hint: (1,.35)
            #pos_hint: {"center_x": 0.5, "top": 0.65}
            orientation: "vertical"

            canvas:
                Color:
                    rgba: .04, .33, .27, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius:[(20.0, 20.0), (20.0, 20.0), (20.0, 20.0), (20.0, 20.0)]
            MDLabel:
                id: texto_multi
                size_hint: (1, 1)
                font_style: "H6"
                halign: "center"
                font_size: "30sp"
                font_name : "Urban Class"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                #text: "Aqui ira la variable texto_mult"
            MDLabel:
                id: texto
                size_hint: (1, 1)
                font_style: "H6"
                halign: "center"
                font_size: "40sp"
                font_name : "Urban Class"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                #text: "Aqui ira la variable texto"
        
        BoxLayout:

            #id: enunciados
            size_hint: (1,.1)
            #pos_hint: {"center_x": 0.5, "top": 0.65}
            orientation: "horizontal"
            canvas:
                Color:
                    rgba: 0.3, .8, 0.8, 0.1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius:[(20.0, 20.0), (20.0, 20.0), (20.0, 20.0), (20.0, 20.0)]
            FloatLayout:
                MDLabel:
                    pos_hint: {"x":.12, "center_y":.5}
                    size_hint: (.4, .2)
                    font_style: "Subtitle1"
                    halign: "center"
                    text: "Resultado: "
                    font_name : "Urban Class"
                    font_size: "22sp"

                MDTextFieldRect:
                    id: resultado
                    pos_hint:{"x":.5, "center_y": 0.5}
                    size_hint:(.3, .35)
                    input_type: "number"
                    halign:"center"
                    font_style:"H6"
        BoxLayout:
            size_hint: (1,.15)

            canvas:
                Color:
                    rgba: .04, .33, .27, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius:[(20.0, 20.0), (20.0, 20.0), (20.0, 20.0), (20.0, 20.0)]
            MDLabel:
                id: multi
                size_hint: (.2, 1)
                font_style: "H6"
                font_name : "Urban Class"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                halign: "center"
                text: "Â¿Preparad@ para repasar las tablas?"            

        
        BoxLayout:
            size_hint: (1, .2)
            #orientation: "vertical"
            # pos_hint: {"center_x": 0.5, "top": 0.97}
            canvas:
                Color:
                    rgba: 0.3, .8, 0.8, 0.1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius:[(20.0, 20.0), (20.0, 20.0), (20.0, 20.0), (20.0, 20.0)]
            
            FloatLayout:

                MDLabel:
                    size_hint: (1, .15)
                    pos_hint: {"x": .05, "center_y": .7}
                    font_style: "H6"
                    halign: "left"
                    text: "Tablas:"
                    font_name : "Urban Class"
                GridLayout:
                    id: tablas
                    size_hint: (1, .85)
                    pos_hint: {"x": .03, "center_y": .4}
                    rows: 1
                    halign: "center"
                          

        BoxLayout:

            size_hint: (1,.1)
            orientation: "horizontal"

            canvas:
                Color:
                    rgba: 0.3, .8, 0.8, 0.1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius:[(20.0, 20.0), (20.0, 20.0), (20.0, 20.0), (20.0, 20.0)]

            FloatLayout:

                MDFillRoundFlatButton:

                    pos_hint: {"x":0.2, "center_y":.5}
                    #size_hint: 0.3, None
                    id: limpiar_tablas
                    text: "Limpiar tablas"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    #md_bg_color: 0.17, 0.62, .35, 1
                    md_bg_color: app.theme_cls.primary_color
                    on_release: root.limpiar_tablas()
                    

                MDFillRoundFlatButton:
                    
                    pos_hint: {"x":.6, "center_y":.5}
                    #size_hint: 1.0, None
                    text: "Completar tablas"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    #md_bg_color: 0.17, 0.62, .35, 1
                    md_bg_color: app.theme_cls.primary_color
                    on_release: root.rellenar_tablas()
        
        
        

        
            


            
