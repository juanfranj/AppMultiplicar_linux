
<Multiplicacion>
    BoxLayout:
        #padding: "5dp", "5dp"
        #spacing: 5
        orientation: "vertical"

        canvas:
            Color:
                rgba: .43, .17, .0, 1
            Rectangle:
                pos: self.pos
                size: self.size

        
        BoxLayout:
            size_hint: (1,.1)
            orientation: "horizontal"
            canvas:
                Color:
                    rgba: .04, .33, .27, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    #radius:[(20.0, 20.0), (20.0, 20.0), (20.0, 20.0), (20.0, 20.0)]
            
            FloatLayout:

                GridLayout:
                    id: dificultad
                    size_hint: (.75, 1)
                    pos_hint: {"x": .0, "center_y": .5}
                    rows: 1
                    haling: "center"

                
                MDFillRoundFlatButton:

                    pos_hint: {"x":0.76, "center_y":.5}
                    #size_hint: 0.3, None
                    id: calcular
                    text: "Comenzar"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    md_bg_color: 0.3, 0.3, .3, 1
                    font_style: "H6"
                    font_size: "15sp"
                    on_release: root.mostrar_multiplicacion()
            
        BoxLayout:
            size_hint: (1,.9)
            orientation: "vertical"
            
            canvas:
                Color:
                    rgba: .04, .33, .27, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    #radius:[(20.0, 20.0), (20.0, 20.0), (20.0, 20.0), (20.0, 20.0)]
            BoxLayout:
                size_hint: (1,.05)
                MDLabel:
                    id: informacion
                    pos_hint: {"x":.5, "top":.5}
                    size_hint: (.3, .5)
                    font_style: "H6"
                    font_name : "Urban Class"
                    font_size: "30sp"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    halign: "center"
                    text: ""
                        
            BoxLayout:
                size_hint: (1,.95)
                orientation: "vertical"
                FloatLayout:
                    id: pizarra
                    GridLayout:
                        id:grid
                        size_hint: (1, .92)
                        pos_hint: {"x":.0, "top":1}
                        
                    MDFillRoundFlatButton:
                        id: boton_calcular
                        size_hint: (.4, .08)
                        pos_hint: {"center_x":0.25, "center_y":.06}
                        text: "Resultado"
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                        md_bg_color: 0.3, 0.3, .3, 1
                        font_style: "H6"
                        on_release: root.mostrar_resultado()
                    
                    MDFillRoundFlatButton:
                        id: boton_comprobar
                        size_hint: (.4, .08)
                        pos_hint: {"center_x":0.75, "center_y":.06}
                        text: "Comprobar"
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                        md_bg_color: 0.3, 0.3, .3, 1
                        font_style: "H6"
                        on_release: root.mostrar_comprobar_resultado()
                    
        
