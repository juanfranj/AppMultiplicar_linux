<Resultados>
    BoxLayout:
        spacing: 10
        padding: 10
        orientation: "vertical"
        
        MDFloatLayout:

            id: tablas
            size_hint: 1,1
            size_hint: 1,.85
            #adaptive_height: True
            md_bg_color:  0, .4, 0, 0.1
            #orientation: "vertical"
            canvas:
                Color:
                    rgba:  0, .4, 0, 0.1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius:[(20.0, 20.0), (20.0, 20.0), (20.0, 20.0), (20.0, 20.0)]

        BoxLayout:
            padding: 20
            spacing:20
            size_hint: 1,.15
            canvas:
                Color:
                    rgba: .46, .79, .73, 0.1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius:[(20.0, 20.0), (20.0, 20.0), (20.0, 20.0), (20.0, 20.0)]
                
            MDFillRoundFlatButton:

                pos_hint: {"x":0, "center_y":.5}
                #size_hint: 0.3, None
                id: clear
                text: "Clear"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                md_bg_color: app.theme_cls.primary_color
                on_release: root.clear_canvas_tablas()

            MDFillRoundFlatButton:

                pos_hint: {"x":0.5, "center_y":.5}
                #size_hint: 0.3, None
                id: resultados
                text: "Resultados"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                md_bg_color: app.theme_cls.primary_color
                on_release: root.tabla_resultados()
            
            MDFillRoundFlatButton:

                pos_hint: {"x":0.75, "center_y":.5}
                #size_hint: 0.3, None
                id: estadisticas
                text: "Estadisticas"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                md_bg_color: app.theme_cls.primary_color
                on_release: root.tabla_estadisticas()

            MDFillRoundFlatButton:

                pos_hint: {"x":1, "center_y":.5}
                #size_hint: 0.3, None
                text: "Reiniciar"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                md_bg_color: app.theme_cls.primary_color
                on_release:

